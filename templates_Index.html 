    <script>
        // Update status every 2 seconds
        setInterval(updateStatus, 2000);
        setInterval(updateLogs, 2000);
        
        function updateStatus() {
            fetch('/api/status')
                .then(res => res.json())
                .then(data => {
                    // Update status text
                    document.getElementById('bot-status').innerHTML = 
                        data.running ? 
                        '<span style="color: #48bb78;">üî¥ Running</span>' : 
                        '<span style="color: #a0aec0;">‚ö´ Stopped</span>';
                    
                    document.getElementById('channel-display').textContent = data.channel || 'Not set';
                    document.getElementById('progress-display').textContent = `${data.current}/${data.target}`;
                    
                    // Update progress bar
                    const percentage = data.percentage || 0;
                    document.getElementById('progress-bar').style.width = percentage + '%';
                    document.getElementById('percentage-display').textContent = percentage + '% Complete';
                })
                .catch(error => console.error('Error:', error));
        }
        
        function updateLogs() {
            fetch('/api/logs')
                .then(res => res.json())
                .then(data => {
                    const logsDiv = document.getElementById('logs-display');
                    if (data.logs && data.logs.length > 0) {
                        logsDiv.innerHTML = data.logs.map(log => 
                            `<div class="log-entry">${log}</div>`
                        ).join('');
                    } else {
                        logsDiv.innerHTML = '<div class="log-entry">No logs yet...</div>';
                    }
                    logsDiv.scrollTop = logsDiv.scrollHeight;
                })
                .catch(error => console.error('Error:', error));
        }
        
        function startBot() {
            const channelUrl = document.getElementById('channel-url').value;
            const target = document.getElementById('target').value;
            
            if (!channelUrl) {
                alert('Please enter a channel URL');
                return;
            }
            
            fetch('/api/start', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({
                    channel_url: channelUrl,
                    target: parseInt(target)
                })
            })
            .then(res => res.json())
            .then(data => {
                if (data.error) {
                    alert('Error: ' + data.error);
                } else {
                    alert('‚úÖ Bot started successfully!');
                    updateStatus();
                }
            })
            .catch(error => {
                alert('Error starting bot: ' + error);
            });
        }
        
        function stopBot() {
            fetch('/api/stop', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'}
            })
            .then(res => res.json())
            .then(data => {
                alert('‚èπÔ∏è Bot stopped');
                updateStatus();
            })
            .catch(error => {
                alert('Error stopping bot: ' + error);
            });
        }
        
        // Initial updates
        updateStatus();
        updateLogs();
    </script>
